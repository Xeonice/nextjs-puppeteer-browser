{
  "functions": {
    "app/api/screenshot/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "app/api/screenshot/advanced/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "env": {
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1",
    "CHROMIUM_PATH": ""
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
} 